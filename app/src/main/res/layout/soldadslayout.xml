<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_marginBottom="5dp"
    android:paddingBottom="20dp"
    app:cardCornerRadius="14dp">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView

                android:id="@+id/soldAdTitleText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:background="#56FFFFFF"
                android:text="Title"
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_marginStart="4dp"
                android:textColor="#050505"
                android:layout_marginLeft="4dp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/soldMartText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:background="#56FFFFFF"
                android:text="Mart"
                android:layout_marginStart="8dp"
                android:textColor="#050505"
                android:layout_marginLeft="8dp" />
            <TextView
                android:id="@+id/soldDateText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:background="#56FFFFFF"
                android:text="Date"

                android:textColor="#050505"
                android:layout_marginLeft="8dp" />
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/noSoldText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:background="#56FFFFFF"
                android:text="Number Sold"
                android:layout_marginStart="8dp"
                android:textColor="#050505"
                android:layout_marginLeft="8dp" />

            <TextView
                android:id="@+id/avgWText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:background="#56FFFFFF"
                android:text="Average Weight"
                android:layout_marginStart="8dp"
                android:textColor="#050505"
                android:layout_marginLeft="8dp" />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/askingPriceText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:background="#56FFFFFF"
                android:text="Asking Price"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="10dp"
                android:textColor="#050505"
                android:layout_marginLeft="8dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/soldPriceText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:background="#56FFFFFF"
                android:text="Price"
                android:textStyle="bold"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="10dp"
                android:textColor="#050505"
                android:layout_marginLeft="8dp" />
            <TextView
                android:id="@+id/pricepkgText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:background="#56FFFFFF"
                android:text="Price/Kg"
                android:textStyle="bold"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="10dp"
                android:textColor="#050505"
                android:layout_marginLeft="8dp" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/differenceText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:background="#56FFFFFF"
                android:text="You sold for..."
                android:layout_marginStart="8dp"
                android:layout_marginBottom="10dp"
                android:textColor="#050505"
                android:layout_marginLeft="8dp" />

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>